docker run -d \
-v /data/elasticsearch/data:/data/elasticsearch/data \
-v /data:/data/elasticsearch-5.4.3/data \
-v /logs:/data/elasticsearch-5.4.3/logs \
-p 9200:9200 -p 9300:9300 \
-e ES_JAVA_OPTS="-Xms3g -Xmx3g" \
-e NODE_NAME=eoitek \
-e UNICAST_HOSTS=eoitek:9300 \
-e CLUSTER=eoitek \
--name=elasticsearch01 --network=host --restart=always eoitek/elasticsearch-5.4.3